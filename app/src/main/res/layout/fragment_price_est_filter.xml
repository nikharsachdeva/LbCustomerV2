<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quick.PriceEstFilterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorLightBeige"
        android:background="@drawable/bg_bottom_sheet_round"
        android:padding="@dimen/dimen20dp">

        <ImageView
            android:id="@+id/closeFilter_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/colorHeading" />

        <RelativeLayout
            android:id="@+id/filterService_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/closeFilter_iv"
            android:layout_marginTop="@dimen/dimen20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/filterServiceHeading_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="@string/select_service"
                android:textColor="@color/colorHeading"
                android:textSize="22sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filterService_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/filterServiceHeading_tv"
                android:layout_marginTop="@dimen/dimen20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/row_item_select_service" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filterQuantity_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/filterService_rl"
            android:layout_marginTop="@dimen/dimen20dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/filterQuantityHeading_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:text="@string/select_quantity_type"
                android:textColor="@color/colorHeading"
                android:textSize="22sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/filterQuantity_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/filterQuantityHeading_tv"
                android:layout_marginTop="@dimen/dimen20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/row_item_select_service" />

        </RelativeLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/applyPriceFilter_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/filterQuantity_rl"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_8px"
            android:fontFamily="@font/lexend_medium"
            android:text="Apply"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@color/colorBlueBtn"
            app:icon="@drawable/ic_tick_circle"
            app:iconGravity="textStart" />

    </RelativeLayout>

</FrameLayout>