<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/item_location_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_border"
        android:padding="@dimen/dimen10dp">

        <ImageView
            android:layout_width="@dimen/dimen20dp"
            android:layout_height="@dimen/dimen20dp"
            android:src="@drawable/ic_baseline_location_on_24"
            app:tint="@color/colorActiveIndicator" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_location_heading_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen10dp"
        android:layout_marginEnd="@dimen/dimen10dp"
        android:layout_toEndOf="@id/item_location_icon"
        android:ellipsize="end"
        android:fontFamily="@font/lexend_regular"
        android:maxLines="1"
        android:text="@string/lorem_ipsum"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/item_location_subheading_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_location_heading_tv"
        android:layout_marginStart="@dimen/dimen10dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="@dimen/dimen10dp"
        android:layout_toEndOf="@id/item_location_icon"
        android:ellipsize="end"
        android:fontFamily="@font/lexend_medium"
        android:maxLines="2"
        android:text="@string/lorem_ipsum"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/item_location_subheading_tv"
        android:layout_marginStart="@dimen/dimen10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/item_location_icon"
        android:background="@color/colorGreyHeading" />

</RelativeLayout>