<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkerBlue"
    android:layoutAnimation="@anim/layout_animation_fade_enter"
    android:padding="@dimen/dimen20dp"
    tools:context=".ui.ReferIntroFragment">

    <LinearLayout
        android:id="@+id/referIntro_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/referLottie_lv"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/refer_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/lexend_bold"
            android:text="@string/refer_tagline"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <RelativeLayout
            android:id="@+id/referNow_rl"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/refer_button_grad">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/lexend_bold"
                android:text="@string/refer_now"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/referLottie_lv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/refer_heart"
        app:lottie_speed="0.5" />

</RelativeLayout>