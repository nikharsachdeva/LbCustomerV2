<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dimen20dp"
    tools:context=".ui.PricesFragment">

    <RelativeLayout
        android:id="@+id/priceHeading_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/priceHeading_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dimen10dp"
            android:layout_toStartOf="@id/priceFilter_iv"
            android:fontFamily="@font/lexend_bold"
            android:text="@string/price_estimator"
            android:textColor="@color/colorPurple"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/priceFilter_iv"
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen10dp"
            android:background="@drawable/rounded_button_4px"
            android:backgroundTint="@color/colorPurpleHighlight"
            android:padding="@dimen/dimen_5dp"
            android:src="@drawable/baseline_filter_alt_24"
            android:visibility="visible"
            app:tint="@color/colorPurple" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/priceListAvailable_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priceHeading_rl"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/addItemRootTabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:clipToPadding="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabPaddingEnd="10dp"
            app:tabPaddingStart="10dp"
            app:tabSelectedTextColor="@color/colorHeading"
            app:tabTextAppearance="@style/CustomTextAppearanceVendorTab"
            app:tabTextColor="@color/colorSubHeading" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/addItemRootViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/addItemRootTabLayout"
            android:clipToPadding="false" />

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/priceShimmer_sl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen20dp"
            android:visibility="gone"
            app:shimmer_auto_start="false">

            <include layout="@layout/price_shimmer_layout" />

        </com.facebook.shimmer.ShimmerFrameLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/priceListUnAvailable_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/no_data"
            app:lottie_speed="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_button_4px"
            android:backgroundTint="#1030b856"
            android:fontFamily="@font/lexend_regular"
            android:padding="10dp"
            android:text="@string/please_select_filters"
            android:textColor="@color/colorDarkerBlue"
            android:textSize="12sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/addItemContinue_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-60dp"
        android:background="@drawable/rounded_button_8px"
        android:backgroundTint="@color/colorPastelGreen"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemCount_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    android:text="0 Items"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/billTotal_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    android:text="â‚¹0"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/lexend_regular"
                android:text="Note : Extra charges may apply"
                android:textColor="@color/white"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>