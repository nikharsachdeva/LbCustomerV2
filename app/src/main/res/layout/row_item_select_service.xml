<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <RelativeLayout
        android:id="@+id/serviceRoot_rl"
        isSelected="@{isSelected}"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="@dimen/dimen10dp"
        android:background="@drawable/bg_item_service_selector">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:backgroundTint="@color/colorLightPurple"
            android:background="@drawable/rounded_button_12px"
            android:padding="@dimen/dimen10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/serviceIcon_iv"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center" />

                <TextView
                    android:id="@+id/serviceName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5dp"
                    android:ellipsize="end"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lexend_light"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textSize="12sp" />

            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

</layout>