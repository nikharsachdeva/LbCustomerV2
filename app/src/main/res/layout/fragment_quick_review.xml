<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quick.QuickReviewFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backFromQReview_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_ios_new_24"
                app:tint="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/reviewBasicDetail_cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen20dp"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/boxLottie_lv"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-30dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/card_unbox"
                        app:lottie_speed="1" />

                    <TextView
                        android:id="@+id/reviewHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-50dp"
                        android:fontFamily="@font/lexend_medium"
                        android:text="Review!"
                        android:textColor="@color/colorHeading"
                        android:textSize="24sp" />

                    <View
                        android:id="@+id/vendorDotted_v"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/dashed_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:text="Service Requested"
                            android:textColor="@color/colorGreyHeading"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/reviewServiceName_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:gravity="end"
                            android:textColor="@color/colorHeading"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:text="Approximate Qty."
                            android:textColor="@color/colorGreyHeading"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/reviewApproxQty_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:gravity="end"
                            android:textColor="@color/colorHeading"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:text="Pickup Date"
                            android:textColor="@color/colorGreyHeading"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/reviewPickupDate_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:gravity="end"
                            android:textColor="@color/colorHeading"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:text="Pickup Address"
                            android:textColor="@color/colorGreyHeading"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/reviewPickupAddress_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:gravity="end"
                            android:textColor="@color/colorHeading"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen10dp"
                        android:layout_marginTop="@dimen/dimen10dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/lexend_regular"
                            android:text="Coupon Applied"
                            android:textColor="@color/colorGreyHeading"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/reviewCoupon_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_5dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_button_30px"
                            android:backgroundTint="#20ffd12f"
                            android:fontFamily="@font/lexend_regular"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/dimen_5dp"
                            android:textColor="#ffd12f"
                            android:textSize="14sp" />

                    </LinearLayout>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/reviewConfirm_btn"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="@dimen/dimen20dp"
                        android:background="@drawable/rounded_button_30px"
                        android:fontFamily="@font/lexend_medium"
                        android:text="Confirm Place Order"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:visibility="visible"
                        app:backgroundTint="@color/colorBlueBtn"
                        app:icon="@drawable/ic_baseline_flash_on_24"
                        app:iconGravity="textStart"
                        app:iconSize="18dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>