<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <RelativeLayout
        android:id="@+id/couponRootRl"
        isSelected="@{isSelected}"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen10dp"
        android:background="@drawable/bg_item_border_selector"
        android:padding="@dimen/dimen20dp">

        <LinearLayout
            android:id="@+id/couponDetails_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/item_arrow_frame"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/copyCoupon_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_30px"
                android:backgroundTint="#50ffd12f"
                android:orientation="horizontal"
                android:padding="@dimen/dimen_5dp">

                <ImageView
                    android:layout_width="@dimen/dimen18dp"
                    android:layout_height="@dimen/dimen18dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:backgroundTint="@color/colorHeading"
                    android:src="@drawable/discount" />

                <TextView
                    android:id="@+id/row_item_coupon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen10dp"
                    android:layout_marginEnd="@dimen/dimen10dp"
                    android:fontFamily="@font/lexend_medium"
                    android:textColor="@color/colorHeading"
                    android:textSize="12sp" />

                <FrameLayout
                    android:id="@+id/copyFrame_fl"
                    android:layout_width="@dimen/dimen_30dp"
                    android:layout_height="@dimen/dimen_30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="#ffd12f"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_baseline_content_copy_24"
                        app:tint="@color/colorHeading" />

                </FrameLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/row_item_coupon_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:fontFamily="@font/lexend_regular"
                android:textColor="@color/colorHeading"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/row_item_coupon_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen10dp"
                android:fontFamily="@font/lexend_regular"
                android:textColor="@color/colorHeading"
                android:textSize="14sp" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/item_arrow_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen10dp">

            <ImageView
                android:id="@+id/item_faq_arrow_down"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:visibility="visible"
                app:tint="@color/colorHeading" />

            <ImageView
                android:id="@+id/item_faq_arrow_up"
                android:layout_width="@dimen/dimen_24dp"
                android:layout_height="@dimen/dimen_24dp"
                android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                android:visibility="gone"
                app:tint="@color/colorHeading" />

        </FrameLayout>

    </RelativeLayout>


</layout>