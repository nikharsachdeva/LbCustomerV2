<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isSelected"
            type="Boolean" />
    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen10dp">

        <RelativeLayout
            android:id="@+id/serviceRoot_rl"
            isSelected="@{isSelected}"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:background="@drawable/bg_item_service_selector">

            <RelativeLayout
                android:id="@+id/dateSlotChild_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/rounded_button_12px"
                android:backgroundTint="@color/colorLightPurple"
                android:padding="@dimen/dimen10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dayOfWeek_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dimen_5dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/lexend_regular"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Mon"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/dateOfWeek_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/lexend_bold"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="18"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/monthOfWeek_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:ellipsize="end"
                        android:fontFamily="@font/lexend_bold"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="18"
                        android:textSize="18sp" />

                </LinearLayout>


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/dateClosedReason_tv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/serviceRoot_rl"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:fontFamily="@font/lexend_regular"
            android:text="Same day pickup window closes at"
            android:textAlignment="center"
            android:textColor="@color/colorOrange"
            android:textSize="10sp"
            android:visibility="gone" />

    </RelativeLayout>

</layout>