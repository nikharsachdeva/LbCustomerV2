<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quick.QuickOrderResultFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clipChildren="false"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/orderPlacedLottie_lv"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center_horizontal"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/order_placed" />

            <TextView
                android:id="@+id/orderPlacedHeading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/lexend_bold"
                android:textColor="@color/colorHeading"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/orderPlacedSubHeading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:fontFamily="@font/lexend_regular"
                android:textColor="@color/colorGreyHeading"
                android:textSize="14sp" />


            <club.cred.synth.views.SynthButton
                android:id="@+id/goToHome_btn"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/dimen20dp"
                android:drawablePadding="14dp"
                android:fontFamily="@font/lexend_regular"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingTop="10dp"
                android:paddingEnd="24dp"
                android:paddingBottom="10dp"
                android:text="@string/home"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="visible"
                app:neuButtonCompatColor="@color/colorBlueBtn"
                app:neuButtonDrawable="@drawable/ic_home_white"
                app:neuButtonDrawablePitRadius="20dp"
                app:neuButtonRadius="28dp"
                app:neuButtonType="elevated_soft"
                app:neuFlatButtonColor="@color/colorBlueBtn"
                app:neuPlatformColor="@color/colorBlueBtn" />


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>