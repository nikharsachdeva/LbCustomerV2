<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dimen20dp"
    android:background="@color/profileCyan">

    <TextView
        android:id="@+id/row_item_grid_heading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen20dp"
        android:layout_marginTop="@dimen/dimen20dp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/colorHeading"
        android:textSize="18sp"
        android:visibility="visible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/row_item_grid_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/row_item_grid_heading_tv"
        android:layout_margin="@dimen/dimen20dp"
        android:elevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/row_item_grid_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen20dp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>