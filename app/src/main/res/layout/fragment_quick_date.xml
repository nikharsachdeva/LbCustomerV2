<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quick.QuickDateFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/quickDateNested_sv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/backFromQSDate_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_ios_new_24" />

            <RelativeLayout
                android:id="@+id/slotsAvailable_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/backFromQSDate_iv"
                android:layout_marginTop="@dimen/dimen20dp">

                <TextView
                    android:id="@+id/pickupdate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    android:text="Pickup Date"
                    android:textColor="@color/colorDarkPurple"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/dateInfo_iv"
                    android:layout_width="@dimen/dimen_24dp"
                    android:layout_height="@dimen/dimen_24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/dimen10dp"
                    android:background="@drawable/rounded_button_4px"
                    android:backgroundTint="@color/colorOrangeHighlighter"
                    android:padding="@dimen/dimen_5dp"
                    android:src="@drawable/baseline_info_24"
                    android:visibility="gone"
                    app:tint="@color/colorOrange" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pickupDate_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/pickupdate_tv"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_item_select_date" />

            </RelativeLayout>

            <TextView
                android:id="@+id/slotsUnavailable_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_button_4px"
                android:backgroundTint="#1030b856"
                android:fontFamily="@font/lexend_regular"
                android:padding="10dp"
                android:text="@string/no_slots_available"
                android:textAlignment="center"
                android:textColor="@color/colorDarkerBlue"
                android:textSize="12sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/quickTimeSlot_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slotsAvailable_rl"
                android:layout_marginTop="@dimen/dimen20dp"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</RelativeLayout>