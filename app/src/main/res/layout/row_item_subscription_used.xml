<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/sub_icon_rl"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/rounded_border_12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/order_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sub_tran_con_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/sub_icon_rl">

            <TextView
                android:id="@+id/sub_tran_heading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/sub_tran_amt"
                android:fontFamily="@font/lexend_medium"
                android:textColor="@color/colorDarkerBlue"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/sub_tran_subheading_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sub_tran_heading_tv"
                android:layout_marginTop="5dp"
                android:alpha="0.7"
                android:fontFamily="@font/lexend_regular"
                android:textColor="@color/colorHorizontalLine"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/sub_tran_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/rounded_button_10px"
                android:backgroundTint="@color/colorGreyHeading"
                android:fontFamily="@font/lexend_medium"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:paddingBottom="5dp"
                android:textColor="@color/colorDarkerBlue"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/sub_tran_closing_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_tran_con_rl"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:fontFamily="@font/lexend_regular"
            android:textColor="@color/colorHorizontalLine"
            android:textSize="11sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>

