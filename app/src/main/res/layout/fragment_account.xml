<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/accountRoot_sv"
    android:background="@color/white"
    android:scrollbars="none"
    tools:context=".ui.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/profileHeader_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen20dp"
            android:padding="@dimen/dimen20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/userProfileIcon_cv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/userProfileIcon_iv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/colorDarkerBlue" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/userProfileCam_cv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/userProfileIcon_cv"
                android:layout_marginStart="-25dp"
                android:layout_marginTop="-35dp"
                android:layout_toEndOf="@id/userProfileIcon_cv"
                app:cardBackgroundColor="@color/colorBabyPink"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/userProfileCam_iv"
                    android:layout_width="@dimen/dimen18dp"
                    android:layout_height="@dimen/dimen18dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_camera_enhance_24" />


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/userProfileName_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userProfileIcon_cv"
                android:layout_marginTop="@dimen/dimen20dp">

                <TextView
                    android:id="@+id/userProfileName_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/lexend_bold"
                    android:text="Nikhar Sachdeva"
                    android:textColor="@color/colorHeading"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/userProfileNameUnav_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <View
                        android:id="@+id/userProfileNameDash_v"
                        android:layout_width="100dp"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/dashed_line" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/userProfileNameDash_v"
                        android:src="@drawable/ic_baseline_mode_edit_24"
                        app:tint="@color/colorBlueBtn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/lexend_regular"
                        android:text="Add Name"
                        android:textColor="@color/colorGreyHeading"
                        android:textSize="14sp" />

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/userProfileJoinDate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/userProfileName_rl"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:fontFamily="@font/lexend_regular"
                android:text="Member Since : 31st Aug 2022"
                android:textColor="@color/colorGreyHeading"
                android:textSize="14sp" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileBasicDetail_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileHeader_rl"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/dimen20dp"
            android:layout_marginEnd="@dimen/dimen20dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_15">

                <RelativeLayout
                    android:id="@+id/profileEmailRoot_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15">

                    <TextView
                        android:id="@+id/profileEmailHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_regular"
                        android:text="Email"
                        android:textColor="@color/colorDarkerBlue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/profileEmailValue_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen20dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_toStartOf="@id/profileEmailArrow_iv"
                        android:layout_toEndOf="@id/profileEmailHeading_tv"
                        android:ellipsize="end"
                        android:fontFamily="@font/lexend_regular"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/colorGreyHeading"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/profileEmailArrow_iv"
                        android:layout_width="@dimen/dimen18dp"
                        android:layout_height="@dimen/dimen18dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:tint="@color/colorGreyHeading" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/profileEmailArrow_iv"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@color/colorGreyHeading" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15">

                    <TextView
                        android:id="@+id/profilePriNumHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_regular"
                        android:text="Primary Contact"
                        android:textColor="@color/colorDarkerBlue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/profilePriNumValue_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="@dimen/dimen20dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_toEndOf="@id/profilePriNumHeading_tv"
                        android:ellipsize="end"
                        android:fontFamily="@font/lexend_regular"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/colorGreyHeading"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/profilePriNumHeading_tv"
                        android:layout_marginTop="@dimen/dimen_15"
                        android:background="@color/colorGreyHeading" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profileAltConRoot_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/profileSecNumHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lexend_regular"
                        android:text="Secondary Contact"
                        android:textColor="@color/colorDarkerBlue"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/profileSecNumValue_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen20dp"
                        android:layout_marginEnd="@dimen/dimen10dp"
                        android:layout_toStartOf="@id/profileSecNumArrow_iv"
                        android:layout_toEndOf="@id/profileSecNumHeading_tv"
                        android:ellipsize="end"
                        android:fontFamily="@font/lexend_regular"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/colorGreyHeading"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/profileSecNumArrow_iv"
                        android:layout_width="@dimen/dimen18dp"
                        android:layout_height="@dimen/dimen18dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:tint="@color/colorGreyHeading" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/profileOptions_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileBasicDetail_cv"
            android:layout_marginStart="@dimen/dimen20dp"
            android:layout_marginTop="@dimen/dimen20dp"
            android:layout_marginEnd="@dimen/dimen20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/profileRewardRoot_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_12px"
                    android:backgroundTint="@color/rewardsBg"
                    android:padding="@dimen/dimen_30dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:src="@drawable/gift_box"
                        app:tint="@color/rewardsMain" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/lexend_light"
                    android:gravity="center"
                    android:text="@string/rewards"
                    android:textColor="@color/colorDarkerBlue"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileCoinRoot_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_12px"
                    android:backgroundTint="@color/coinsBg"
                    android:padding="@dimen/dimen_30dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:src="@drawable/money"
                        app:tint="@color/coinsMain" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/lexend_light"
                    android:gravity="center"
                    android:text="@string/coins"
                    android:textColor="@color/colorDarkerBlue"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/profileSubRoot_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_12px"
                    android:backgroundTint="@color/subBg"
                    android:padding="@dimen/dimen_30dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:src="@drawable/ic_ticket"
                        app:tint="@color/subMain" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/lexend_light"
                    android:gravity="center"
                    android:text="@string/subscriptions"
                    android:textColor="@color/colorDarkerBlue"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/profilePackRoot_rl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_button_12px"
                    android:backgroundTint="@color/profilePink"
                    android:padding="@dimen/dimen_30dp">

                    <ImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:src="@drawable/diamond_icon"
                        app:tint="@color/colorPink" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen10dp"
                    android:fontFamily="@font/lexend_light"
                    android:gravity="center"
                    android:text="@string/lb"
                    android:textColor="@color/colorDarkerBlue"
                    android:textSize="12sp" />


            </LinearLayout>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/profileImpDetail_cv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileOptions_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen20dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dimen_15">

                <RelativeLayout
                    android:id="@+id/profileOrderRoot_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15">

                    <ImageView
                        android:id="@+id/profileOrderIcon_iv"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rounded_button_8px"
                        android:backgroundTint="@color/profileCyan"
                        android:padding="5dp"
                        android:src="@drawable/ic_hanger"
                        app:tint="@color/colorDarkerBlue" />

                    <TextView
                        android:id="@+id/profileOrderHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen20dp"
                        android:layout_toEndOf="@id/profileOrderIcon_iv"
                        android:fontFamily="@font/lexend_regular"
                        android:text="Orders"
                        android:textColor="@color/colorDarkerBlue"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/profileOrderArrow_tv"
                        android:layout_width="@dimen/dimen18dp"
                        android:layout_height="@dimen/dimen18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:tint="@color/colorDarkerBlue" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profileAddRoot_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15">

                    <ImageView
                        android:id="@+id/profileAddIcon_iv"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rounded_button_8px"
                        android:backgroundTint="@color/profileCyan"
                        android:padding="5dp"
                        android:src="@drawable/ic_home"
                        app:tint="@color/colorDarkerBlue" />

                    <TextView
                        android:id="@+id/profileAddHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen20dp"
                        android:layout_toEndOf="@id/profileAddIcon_iv"
                        android:fontFamily="@font/lexend_regular"
                        android:text="Address Book"
                        android:textColor="@color/colorDarkerBlue"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/profileAddArrow_tv"
                        android:layout_width="@dimen/dimen18dp"
                        android:layout_height="@dimen/dimen18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:tint="@color/colorDarkerBlue" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profileLogout_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/profileLogIcon_iv"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:background="@drawable/rounded_button_8px"
                        android:backgroundTint="@color/profileCyan"
                        android:padding="5dp"
                        android:src="@drawable/ic_home"
                        app:tint="@color/colorDarkerBlue" />

                    <TextView
                        android:id="@+id/profileLogOutHeading_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dimen20dp"
                        android:layout_toEndOf="@id/profileLogIcon_iv"
                        android:fontFamily="@font/lexend_regular"
                        android:text="Log Out"
                        android:textColor="@color/colorDarkerBlue"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/profileLogArrow_tv"
                        android:layout_width="@dimen/dimen18dp"
                        android:layout_height="@dimen/dimen18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                        app:tint="@color/colorDarkerBlue" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>