<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/plusSubCvRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    app:cardBackgroundColor="@color/colorHeading"
    app:cardCornerRadius="30dp">

    <RelativeLayout
        android:id="@+id/plusSubRlRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <RelativeLayout
            android:id="@+id/plusSubRlSubRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/subIcon_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/diamond_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/subPrice_ll"
                android:layout_toEndOf="@id/subIcon_iv"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/subName_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_bold"
                    android:text="Freedom 30"
                    android:textColor="@color/colorHeading"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/subValidity_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/lexend_regular"
                    android:text="No delivery charge applicable for 1 month"
                    android:textColor="@color/colorSubHeading"
                    android:textSize="14sp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/subPrice_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/subPriceOld_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/subPriceOld_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/lexend_bold"
                        android:text="₹500"
                        android:textColor="@color/white"
                        android:textSize="17sp" />

                    <View
                        android:id="@+id/subPriceOld_v"
                        android:layout_width="70dp"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/colorOrange" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/subPrice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subPriceOld_rl"
                    android:fontFamily="@font/lexend_bold"
                    android:text="₹500"
                    android:textColor="@color/colorHeading"
                    android:textSize="35sp" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/subDivider_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/plusSubRlSubRoot"
            android:layout_margin="10dp"
            android:background="@color/colorSubHeading" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/chooseSub_btn"
            android:layout_below="@id/subDivider_v"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subDesc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lexend_regular"
                    android:text=""
                    android:textColor="@color/colorSubHeading"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/subPoints_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subDesc_tv"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/row_item_plus_sub_point" />

            </RelativeLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/chooseSub_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_button_30px"
            android:fontFamily="@font/lexend_medium"
            android:text="Choose Plan"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:backgroundTint="@color/colorBlueBtn"
            app:icon="@drawable/ic_tick_circle"
            app:iconGravity="textStart"
            app:iconSize="18dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>