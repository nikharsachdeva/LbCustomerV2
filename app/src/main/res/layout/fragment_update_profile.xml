<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.UpdateProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_sheet_round"
        android:padding="@dimen/dimen20dp">

        <ImageView
            android:id="@+id/closeUpdate_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/white" />

        <RelativeLayout
            android:id="@+id/updateEmailRoot_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/closeUpdate_iv"
            android:layout_marginTop="@dimen/dimen20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/updateEmailHeading_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:gravity="center_horizontal"
                android:text="@string/update_email"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <RelativeLayout
                android:id="@+id/gmailAvailable_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updateEmailHeading_tv"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:background="@drawable/rounded_button_8px"
                android:backgroundTint="@color/colorHorizontalLine"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/googleIcon_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/google" />

                <View
                    android:id="@+id/dividerCallback_v"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/googleIcon_iv"
                    android:background="@color/colorGreyHeading" />

                <EditText
                    android:id="@+id/gmailAvailable_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_toStartOf="@id/disconnectGmail_iv"
                    android:layout_toEndOf="@id/dividerCallback_v"
                    android:background="@null"
                    android:editable="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:fontFamily="@font/lexend_medium"
                    android:hint="nikhars40@gmail.com"
                    android:inputType="textMultiLine"
                    android:letterSpacing="0.1"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorGreyHeading"
                    android:textSize="14sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/disconnectGmail_iv"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dimen_5dp"
                    android:src="@drawable/log_out"
                    app:tint="@color/redMain" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gmailUnAvailable_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updateEmailHeading_tv"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:background="@drawable/rounded_button_8px"
                android:backgroundTint="@color/colorHorizontalLine"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/googleIcon2_iv"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dimen_5dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/google" />

                <View
                    android:id="@+id/dividerCallback2_v"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/googleIcon2_iv"
                    android:background="@color/colorGreyHeading" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_toEndOf="@id/dividerCallback2_v"
                    android:fontFamily="@font/lexend_medium"
                    android:gravity="center"
                    android:text="Connect Google Account"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/updateContactRoot_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/closeUpdate_iv"
            android:layout_marginTop="@dimen/dimen20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/updateContactHeading_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:gravity="center_horizontal"
                android:text="@string/update_contact"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <RelativeLayout
                android:id="@+id/updateContactChild_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updateContactHeading_tv"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:background="@drawable/rounded_button_8px"
                android:backgroundTint="@color/colorHorizontalLine"
                android:padding="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/countryCodeWhatsapp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/lexend_medium"
                    android:text="@string/_91"
                    android:textColor="@color/colorGreyHeading"
                    android:textSize="26sp" />

                <View
                    android:id="@+id/dividerCallback3_v"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dimen20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="@dimen/dimen20dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/countryCodeWhatsapp_tv"
                    android:background="@color/colorGreyHeading" />

                <EditText
                    android:id="@+id/updateContactValue_et"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:layout_toEndOf="@id/dividerCallback3_v"
                    android:background="@null"
                    android:digits="0123456789"
                    android:fontFamily="@font/lexend_medium"
                    android:gravity="center"
                    android:hint="8899008910"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:letterSpacing="0.1"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorGreyHeading"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateContactSubmit_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/updateContactChild_rl"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:alpha="0.7"
                android:background="@drawable/rounded_button_8px"
                android:enabled="false"
                android:fontFamily="@font/lexend_medium"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/colorBlueBtn"
                app:icon="@drawable/ic_tick_circle"
                app:iconGravity="textStart" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/updateNameRoot_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/updateContactRoot_rl"
            android:layout_marginTop="@dimen/dimen20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/updateNameHeading_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_bold"
                android:gravity="center_horizontal"
                android:text="@string/update_name"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <RelativeLayout
                android:id="@+id/updateNameChild_rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updateNameHeading_tv"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginTop="@dimen/dimen20dp"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:background="@drawable/rounded_button_8px"
                android:backgroundTint="@color/colorHorizontalLine"
                android:padding="10dp"
                android:visibility="visible">

                <EditText
                    android:id="@+id/updateNameValue_et"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:fontFamily="@font/lexend_medium"
                    android:hint="Ex. John"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:letterSpacing="0.1"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textColorHint="@color/colorGreyHeading"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateNameSubmit_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/updateNameChild_rl"
                android:layout_marginStart="@dimen/dimen10dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/dimen10dp"
                android:alpha="0.7"
                android:background="@drawable/rounded_button_8px"
                android:enabled="false"
                android:fontFamily="@font/lexend_medium"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/colorBlueBtn"
                app:icon="@drawable/ic_tick_circle"
                app:iconGravity="textStart" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>